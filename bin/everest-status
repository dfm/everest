#!/usr/bin/env python
# -*- coding: utf-8 -*-
'''
everest-status
--------------

'''

import argparse

if __name__ == '__main__':

  parser = argparse.ArgumentParser(prog = 'estats', add_help = True)
  parser.add_argument("campaign", nargs = '?', type = str, default = None, help = 'The K2 campaign to check')
  parser.add_argument("model", nargs = '?', type = str, default = None, help = 'The everest model to check')
  parser.add_argument("-i", "--inject", action = 'store_true', help = 'Run injection stats?')
  parser.add_argument("-m", "--mission", type = str, default = 'k2', help = 'Mission to analyze')
  args = parser.parse_args()
  
  # Get the mission
  from everest import missions
  Status = getattr(missions, args.mission).Status
  
  # Get the campaign number
  if args.campaign is not None:
    if '.' in args.campaign:
      campaign = float(args.campaign)
    else:
      campaign = int(args.campaign)
  else:
    campaign = None
  
  # Injection run?
  if args.inject:
    injection = True
  else:
    injection = False
  
  # Call the function
  if campaign is not None:
    if args.model is not None:
      Status(campaign = campaign, model = args.model, injection = injection)
    else:
      Status(campaign = campaign, injection = injection)
  else:
    if args.model is not None:
      Status(model = args.model, injection = injection)
    else:
      Status(injection = injection)